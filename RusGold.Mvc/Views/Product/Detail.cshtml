@model RusGold.Entities.DTOs.ProductDto
@using RusGold.Entities.DTOs
@using RusGold.Mvc.Extensions
@{
    Layout = "_Layout";
    ViewBag.Title = Model.Product.Name;
    ViewBag.Tags = Url.FriendlyUrlHelper(Model.Product.Name).ToLower();
    ViewBag.Description = Model.Product.Content;
    ViewBag.Author = "RadioDetal";
    ViewBag.image = Model.Product.ThumbNail;
    string link = $"/Produkt/{Url.FriendlyUrlHelper(Model.Product.Name).ToLower().ToString()}/{Model.Product.Id}";
    ViewBag.seolink = link;
    ViewBag.datetime = Model.Product.CreatedDate;
    ViewBag.modifiedtime = Model.Product.ModifiedDate;
}
<style>
    .footer-newsletter__social-links {
        text-align: center;
    }

    .social-links__list {
        display: flex;
        justify-content: center;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .social-links__item {
        margin: 0 10px;
    }

    .social-links__item a {
        display: inline-block;
        color: white;
        font-size: 24px;
        width: 50px;
        height: 50px;
        line-height: 50px;
        text-align: center;
        border-radius: 50%;
        background-color: #333;
        transition: background-color 0.3s ease;
    }

    .social-links__item a:hover {
        background-color: #555;
    }

    .footer-contact {
        margin-top: 15px;
    }

    .footer-contact p {
        font-size: 16px;
        color: #333;
        margin: 5px 0;
    }

    /* Responsiv Dizayn üçün */
    @@media (max-width: 768px) {
    .social-links__list {
        flex-direction: column;
    }

    .social-links__item {
        margin-bottom: 15px;
    }}

</style>
<!-- site__body -->
<div class="site__body">
    <div class="block-header block-header--has-breadcrumb">
        <div class="container">
            <div class="block-header__body">
                <nav class="breadcrumb block-header__breadcrumb" aria-label="breadcrumb">
                    <ol class="breadcrumb__list">
                        <li class="breadcrumb__spaceship-safe-area" role="presentation"></li>
                        <li class="breadcrumb__item breadcrumb__item--parent breadcrumb__item--first"><a href="index.html" class="breadcrumb__item-link">Домашняя страница</a></li>
                        <li class="breadcrumb__item breadcrumb__item--current breadcrumb__item--last" aria-current="page"><span class="breadcrumb__item-link">@Model.Product.Name</span></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="block-split">
        <div class="container">
            <div class="block-split__row row no-gutters">
                <div class="block-split__item block-split__item-content col-auto">
                    <div class="product product--layout--full">
                        <div class="product__body">
                            <div class="product__card product__card--one"></div>
                            <div class="product__card product__card--two"></div>
                            <div class="product-gallery product-gallery--layout--product-full product__gallery" data-layout="product-full">
                                <div class="product-gallery__featured">
                                    <button type="button" class="product-gallery__zoom">
                                        <svg width="24" height="24">
                                            <path d="M15,18c-2,0-3.8-0.6-5.2-1.7c-1,1.3-2.1,2.8-3.5,4.6c-2.2,2.8-3.4,1.9-3.4,1.9s-0.6-0.3-1.1-0.7
	c-0.4-0.4-0.7-1-0.7-1s-0.9-1.2,1.9-3.3c1.8-1.4,3.3-2.5,4.6-3.5C6.6,12.8,6,11,6,9c0-5,4-9,9-9s9,4,9,9S20,18,15,18z M15,2
	c-3.9,0-7,3.1-7,7s3.1,7,7,7s7-3.1,7-7S18.9,2,15,2z M16,13h-2v-3h-3V8h3V5h2v3h3v2h-3V13z" />
                                        </svg>
                                    </button>
                                    <div class="owl-carousel">
                                        <a class="image image--type--product" href="~/img/@Model.Product.ThumbNail" target="_blank" data-width="700" data-height="700">
                                            <div class="image__body"><img class="image__tag" src="~/img/@Model.Product.ThumbNail" alt="@Model.Product.Name" /></div>
                                        </a>
                                    </div>
                                </div>
                                <div class="product-gallery__thumbnails">
                                    <div class="owl-carousel">
                                        <div class="product-gallery__thumbnails-item image image--type--product">
                                            <div class="image__body"><img class="image__tag" src="~/img/@Model.Product.ThumbNail" alt="@Model.Product.Name" /></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="product__header">
                                <h1 class="product__title">@Model.Product.Name</h1>
                                <div class="product__subtitle">
                                    <div class="status-badge status-badge--style--success product__fit status-badge--has-icon status-badge--has-text">
                                        <div class="status-badge__body">
                                            <div class="status-badge__icon">
                                                <svg width="13" height="13"><path d="M12,4.4L5.5,11L1,6.5l1.4-1.4l3.1,3.1L10.6,3L12,4.4z" /></svg>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="product__main">
                                <div class="product__excerpt">
                                    @Html.Raw(Model.Product.Content)
                                </div>
                                <div class="product__features">
                                    <div class="product__features-title">Основные характеристики:</div>
                                    <ul>
                                        <li>
                                            Каталог: <span>
                                                @Model.Product.Category.Name
                                            </span>
                                        </li>
                                        <li>
                                            Единица: @if (Model.Product.UnitId == 1)
                                            {
                                                @:шт
                                            }
                                            else if (Model.Product.UnitId == 2)
                                            {
                                                @:кг
                                            }
                                            <span></span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="product__info">
                                <div class="product__info-card">
                                    <div class="product__info-body">
                                        <div class="product__prices-stock">
                                            @if (Model.Product.PriceByCard != null)
                                            {
                                                <div class="product__prices">
                                                    Цена за новые:
                                                    <div class="product__price product__price--current" style="font-size: 20px;">
                                                        ₽@Model.Product.Price
                                                    </div>
                                                </div>
                                                <div class="product__prices">
                                                    Цена за б/у:
                                                    <div class="product__price product__price--current" style="font-size: 20px;">
                                                        ₽@Model.Product.PriceByCard
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="product__prices">
                                                    Цена:
                                                    <div class="product__price product__price--current" style="font-size: 20px;">
                                                        ₽@Model.Product.Price
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                        <p>
                                            Заказать звонок
                                        </p>
                                        <div class="footer-newsletter__social-links">
                                            <ul class="social-links__list">
                                                <li class="social-links__item social-links__item--facebook">
                                                    <a style="background: #7360f2 !important;" href="#" ><i class="fab fa-viber"></i></a>
                                                </li>
                                                <li class="social-links__item social-links__item--whatsapp">
                                                    <a style="background: #04ba44 !important;" href="#" ><i class="fab fa-whatsapp"></i></a>
                                                </li>
                                                <li class="social-links__item social-links__item--facebook">
                                                    <a style="background: #0088cc !important;" href="#"><i class="fab fa-telegram"></i></a>
                                                </li>
                                            </ul>
    
                                            <div class="footer-contact">
                                                <p class="mt-1">+7 909 168-88-49</p>
                                                <p>+7 950 118-73-74</p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            @*<div class="product__tabs product-tabs product-tabs--layout--full">
                                <ul class="product-tabs__list">
                                    <li class="product-tabs__item product-tabs__item--active"><a href="#product-tab-description">Описание</a></li>
                                </ul>
                                <div class="product-tabs__content">
                                    <div class="product-tabs__pane product-tabs__pane--active" id="product-tab-description">
                                        <div class="typography">
                                            <p>
                                                @Html.Raw(Model.Product.Content)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                        </div>
                    </div>
                    <div class="block-space block-space--layout--divider-nl"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="block-space block-space--layout--before-footer"></div>
</div>
<!-- site__body / end -->