@using RusGold.Mvc.Extensions
@model RusGold.Mvc.Models.ArticleViewModel

<section class="blog-section">
    <div class="boxcar-container">
        <div class="boxcar-title wow fadeInUp">
            <h2>Xəbərlər</h2>
        </div>
        <div class="row">
            <!-- blog-block -->
            @foreach (var item in Model.ArticleListDto.Articles)
            {
                <div class="blog-block col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-box wow fadeInUp">
                        <div class="image-box">
                            <figure class="image">
                                <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id"><img src="~/img/@item.ThumbNail" alt="@item.Title"></a>
                            </figure>
                        </div>
                        <div class="content-box">
                            <ul class="post-info">
                                <li>Cahan Motors</li>
                                <li>@item.CreatedDate.ToShortDateString()</li>
                            </ul>
                            <h6 class="title">
                                <a href="/Bloq/@Url.FriendlyUrlHelper(item.Title).ToLower()/@item.Id" title="">
                                    @item.Title
                                </a>
                            </h6>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</section>