@model RusGold.Entities.DTOs.CategoryListDto

<header class="site__header">
    <div class="header">
        <div class="header__navbar">
            <div class="header__navbar-departments">
                <div class="departments">
                    <button class="departments__button" type="button">
                        <span class="departments__button-icon">
                            <svg width="16px" height="12px"><path d="M0,7L0,5L16,5L16,7L0,7ZM0,0L16,0L16,2L0,2L0,0ZM12,12L0,12L0,10L12,10L12,12Z" /></svg>
                        </span>
                        <span class="departments__button-title">Магазин по каталогу</span>
                        <span class="departments__button-arrow">
                            <svg width="9px" height="6px"><path d="M0.2,0.4c0.4-0.4,1-0.5,1.4-0.1l2.9,3l2.9-3c0.4-0.4,1.1-0.4,1.4,0.1c0.3,0.4,0.3,0.9-0.1,1.3L4.5,6L0.3,1.6C-0.1,1.3-0.1,0.7,0.2,0.4z" /></svg>
                        </span>
                    </button>
                    <div class="departments__menu">
                        <div class="departments__arrow"></div>
                        <div class="departments__body">
                            <ul class="departments__list">
                                <li class="departments__list-padding" role="presentation"></li>
                                @foreach (var item in Model.Categories)
                                {
                                    <li class="departments__item"><a asp-action="Index" asp-controller="Product" asp-route-categoryId="@item.Id" class="departments__item-link">@item.Name</a></li>
                                }
                                <li class="departments__list-padding" role="presentation"></li>
                            </ul>
                            <div class="departments__menu-container"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header__navbar-menu">
                <div class="main-menu">
                    <ul class="main-menu__list">
                        <li class="main-menu__item">
                            <a href="/" class="main-menu__link">
                                Домашняя страница
                            </a>
                        </li>
                        <li class="main-menu__item">
                            <a href="/Katalog" class="main-menu__link">
                                Каталог
                            </a>
                        </li>

                        <li class="main-menu__item">
                            <a href="/Bloq" class="main-menu__link">
                                Статьи
                            </a>
                        </li>
                        <li class="main-menu__item main-menu__item--submenu--menu main-menu__item--has-submenu">
                            <a href="#" class="main-menu__link">
                                Отправка
                                <svg width="7px" height="5px">
                                    <path d="M0.280,0.282 C0.645,-0.084 1.238,-0.077 1.596,0.297 L3.504,2.310 L5.413,0.297 C5.770,-0.077 6.363,-0.084 6.728,0.282 C7.080,0.634 7.088,1.203 6.746,1.565 L3.504,5.007 L0.262,1.565 C-0.080,1.203 -0.072,0.634 0.280,0.282 Z" />
                                </svg>
                            </a>
                            <div class="main-menu__submenu">
                                <ul class="menu">
                                    <li class="menu__item"><a href="/RussianPost" class="menu__link">Отправка Почтой России</a></li>
                                    <li class="menu__item"><a href="/RadioPreparation" class="menu__link">Подготовка радиодеталей к сдаче</a></li>
                                    <li class="menu__item"><a href="/SdekRadioShipping" class="menu__link">Отправка радиодеталей службой СДЭК</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="main-menu__item">
                            <a href="/Kontakt" class="main-menu__link">
                                Контакты
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="header__navbar-phone phone">
                <a href="#" class="phone__body">
                    <div class="phone__title">Заказать звонок:</div>
                    <div class="phone__number">800 060-0730</div>
                </a>
            </div>
        </div>
        <div class="header__logo">
            <a href="/" class="logo">
                <div class="logo__slogan">Auto parts for Cars, trucks and motorcycles</div>
                <div class="logo__image" style="overflow: hidden;">
                    <img src="~/img/radiopriemlogo.png" style="position: absolute; width: 200px; " />
                </div>
            </a>
        </div>
        <div class="header__search">
            <div class="search">
                <form asp-action="Search" asp-controller="Product" method="get" class="search__body">
                    <div class="search__shadow"></div>
                    <input class="search__input" name="keyword" type="text" placeholder="Найти" />
                    <button class="search__button search__button--start" type="button">
                        <span class="search__button-icon">
                            <img width="20px" height="20px" src="~/img/detailogo.png" alt="radiodetal"/>
                        </span>
                        <span class="search__button-title">Поиск деталей</span>
                    </button>
                    <button class="search__button search__button--end" type="submit">
                        <span class="search__button-icon">
                            <svg width="20" height="20">
                                <path d="M19.2,17.8c0,0-0.2,0.5-0.5,0.8c-0.4,0.4-0.9,0.6-0.9,0.6s-0.9,0.7-2.8-1.6c-1.1-1.4-2.2-2.8-3.1-3.9C10.9,14.5,9.5,15,8,15
	c-3.9,0-7-3.1-7-7s3.1-7,7-7s7,3.1,7,7c0,1.5-0.5,2.9-1.3,4c1.1,0.8,2.5,2,4,3.1C20,16.8,19.2,17.8,19.2,17.8z M8,3C5.2,3,3,5.2,3,8
	c0,2.8,2.2,5,5,5c2.8,0,5-2.2,5-5C13,5.2,10.8,3,8,3z" />
                            </svg>
                        </span>
                    </button>
                    <div class="search__box"></div>
                </form>
            </div>
        </div>
        <div style="cursor: none; pointer-events: none;" class="header__indicators">
            <div class="indicator">
                <a href="wishlist.html" class="indicator__button">
                    <span class="indicator__icon">
                        Pаботаем ежедневно
                    </span>
                </a>
            </div>
            <div style="cursor: none; pointer-events: none;" class="indicator indicator--trigger--click">
                <a style="top: 13px; cursor: none; pointer-events: none;" class="indicator__button">
                    <span style="top: 13px; cursor: none; pointer-events: none;" class="indicator__title">c 10:00 до 20:00</span> <span class="indicator__value">

                    </span>
                </a>

            </div>
        </div>
    </div>
</header>