@model RusGold.Entities.DTOs.CreditAddDto

<form asp-action="Add" asp-controller="Credits" method="post" enctype="multipart/form-data" id="form-team-add">
    <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>

    <div class="form-group">
        <label asp-for="ModelId">Model</label>
        @if (ViewBag.brendModels != null)
        {
            @Html.DropDownList("ModelId", new SelectList(ViewBag.brendModels, "Id", "Name"), new { @class = "form-control" })

        }
        <span class="text-danger" asp-validation-for="ModelId"></span>
    </div>
    
   @*  <div class="form-group">
        <label asp-for="CarPrice">Modelin qiyməti</label>
        <input class="form-control" asp-for="CarPrice" />
        <span class="text-danger" asp-validation-for="CarPrice"></span>
    </div> *@
    <div class="form-group">
        <label asp-for="Period">Müddət</label>
        <input class="form-control" asp-for="Period" />
        <span class="text-danger" asp-validation-for="Period"></span>
    </div>

    <div class="form-group">
        <label asp-for="MonthlyPay">Aylıq ödəniş</label>
        <input class="form-control" asp-for="MonthlyPay" />
        <span class="text-danger" asp-validation-for="MonthlyPay"></span>
    </div>

    <div class="form-group">
        <label asp-for="InitialPayment">İlkin ödəniş</label>
        <input class="form-control" asp-for="InitialPayment" />
        <span class="text-danger" asp-validation-for="InitialPayment"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsActive" />
        <label asp-for="IsActive" class="form-check-label"></label>
        <span class="text-danger" asp-validation-for="IsActive"></span>
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="Credits" asp-area="Admin" class="btn btn-danger btn-block"><span class="fas fa-times"></span>Ləğv et</a>
        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span>Yadda saxla</button>
    </div>
</form>