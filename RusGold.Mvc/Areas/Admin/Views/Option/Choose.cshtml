@model RusGold.Entities.Concrete.ChooseUsPageInfo

@{
    Layout = "_Layout";
    ViewBag.Title = "Niye biz";

}

<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Niye biz</h1>
        <p class="page-subtitle">Burada Niye biz ekranın yazılarını redaktə edə bilərsiniz.</p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a href="/Admin">Admin</a></li>
    <li class="active"> Niye biz</li>
</ol>
<div class="row">
    <div class="col-lg-12 card-shadow">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Niye biz</h4>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Option" asp-action="Choose" method="post" id="form-aboutuspageinfo-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Header">Başlıq</label>
                            <textarea class="form-control" asp-for="Header" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="Header"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentFirst">Rəsmi nümayəndə</label>
                            <textarea class="form-control" asp-for="ContentFirst" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentFirst"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentSecond">Zəmanət</label>
                            <textarea class="form-control" asp-for="ContentSecond" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentSecond"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentThird">Servis xidməti</label>
                            <textarea class="form-control" asp-for="ContentThird" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentThird"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ContentFourth">Ehtiyat hissələr</label>
                            <textarea class="form-control" asp-for="ContentFourth" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="ContentFourth"></span>
                        </div>
                     
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span>Yadda saxla</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span>Ləğv et</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
