@model RusGold.Entities.Concrete.ExchangePageInfo

@{
    Layout = "_Layout";
    ViewBag.Title = "Niye biz";

}

<div class="row">
    <div class="col-md-12  header-wrapper">
        <h1 class="page-header">Admin - Valyuta</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<ol class="breadcrumb">
    <li><a href="/Admin">Admin</a></li>
    <li class="active">Valyuta</li>
</ol>
<div class="row">
    <div class="col-lg-12 card-shadow">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Valyuta</h4>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Option" asp-action="Exchange" method="post" id="form-aboutuspageinfo-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="DollarToRuble"></label>
                            <textarea class="form-control" asp-for="DollarToRuble" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="DollarToRuble"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="OldDollarToRuble"></label>
                            <textarea class="form-control" asp-for="OldDollarToRuble" placeholder="Lütfen, içerik bilgisini giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="OldDollarToRuble"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span>Yadda saxla</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span>Ləğv et</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
